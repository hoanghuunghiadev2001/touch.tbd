generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Employee {
  id           String  @id @default(uuid())
  name         String  @unique
  employeeCode String? @unique // üëà Th√™m d√≤ng n√†y
  // N·∫øu mu·ªën th√™m m√£ nh√¢n vi√™n th√¨ th√™m tr∆∞·ªùng employeeCode String @unique?

  monthlyKPIs MonthlyKPI[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

enum Role {
  ADMIN
  MANAGER
  USER
}

model MonthlyKPI {
  id         String   @id @default(uuid())
  employeeId String
  employee   Employee @relation(fields: [employeeId], references: [id])

  year          Int
  month         Int
  tripTarget    Int? // T·ªïng s·ªë chuy·∫øn ƒëi theo th√°ng
  revenueTarget Decimal? @db.Decimal(15, 2) // T·ªïng doanh thu theo th√°ng

  dailyKPIs DailyKPI[] // Quan h·ªá 1-n v·ªõi daily

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([employeeId, year, month]) // ƒê·∫£m b·∫£o 1 b·∫£n ghi ch·ªâ ti√™u/th√°ng/nh√¢n vi√™n
}

model DailyKPI {
  id           String     @id @default(uuid())
  monthlyKPIId String
  monthlyKPI   MonthlyKPI @relation(fields: [monthlyKPIId], references: [id])

  date       DateTime // Ng√†y d·ªØ li·ªáu n√†y ghi nh·∫≠n
  jobCode    String?
  ticketCode String?
  amount     Decimal? @db.Decimal(15, 2)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ImportedFile {
  id         Int      @id @default(autoincrement())
  fileName   String
  fileHash   String   @unique // Th√™m @unique v√†o ƒë√¢y!
  importedAt DateTime @default(now())
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  password String
  name     String
  role     Role   @default(MANAGER)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
